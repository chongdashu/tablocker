{
  "manifest_version": 3,
  "name": "TabGuardian: The Ultimate Tab Blocker",
  "version": "1.0",
  "description": "Take control of your browsing habits with TabGuardian - the snazzy, smart tab blocker that keeps you focused and productive!",
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["activeTab", "storage", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["toast.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
