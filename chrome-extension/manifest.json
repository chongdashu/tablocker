{
  "manifest_version": 3,
  "name": "Un-Tab: Keep Focus; Stop Distractions",
  "version": "1.0",
  "description": "Un-Tab is a tab blocker that helps you stay focused and productive by blocking distracting websites.",
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["activeTab", "storage", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["toast.html", "login.html", "blocked.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
