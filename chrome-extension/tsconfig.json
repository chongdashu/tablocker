{
  "compilerOptions": {
    "strict": true,
    "target": "ES2017",
    "module": "ES2015",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "*": ["*"]
    },
    "noEmitOnError": true,
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
